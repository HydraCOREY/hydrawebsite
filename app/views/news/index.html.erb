
  <div class="container">
    <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>
      <h1>Listing News</h1>
      <table class="table table-striped table-colored">
        <thead>
          <tr>
            <th>Image</th>
            <th>Topic</th>
            <th>Header</th>
            <th>Content</th>
            <th>Link</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @news.each do |news| %>
          <tr>
            <td><%= news.image %></td>
            <td><%= news.topic %></td>
            <td><%= news.header %></td>
            <td><%= news.content %></td>
            <td><%= news.link %></td>
            <td><%= link_to 'Show', news, class: 'btn btn-success btn-border btn-sm' %></td>
            <td><%= link_to 'Edit', edit_news_path(news), class: 'btn btn-default btn-border btn-sm' %></td>
            <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-border btn-sm' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'Create New News', new_news_path, class: 'btn btn-success btn-border btn-sm' %>
    </div>
  </div>
  </div>