<head>
	<meta charset="utf-8">
	<title><%= full_title(yield(:title)) %></title>
	<meta name="description" content="Excellence in sprinkler software since 1972">
	<meta name="author" content="Hydratec Inc.">
	<!-- Mobile Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!-- Favicon -->
	<link rel="shortcut icon" href="favicon.ico">

	<!-- Web Fonts -->
	<link href='http://fonts.googleapis.com/css?family=Roboto:400,300,300italic,400italic,500,500italic,700,700italic' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Raleway:700,400,300' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Arbutus+Slab:400' rel = "stylesheet" type = "text/css">
	<link href='http://fonts.googleapis.com/css?family=PT+Serif' rel='stylesheet' type='text/css'>
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>

</head>
<!-- body classes:  -->
<!-- "boxed": boxed layout mode e.g. <body class="boxed"> -->
<!-- "pattern-1 ... pattern-9": background patterns for boxed layout mode e.g. <body class="boxed pattern-1"> -->
<!-- "transparent-header": makes the header transparent and pulls the banner to top -->
<body class="no-trans  transparent-header ">
	<!-- scrollToTop -->
	<!-- ================ -->
	<div class="scrollToTop circle"><i class="glyphicon glyphicon-arrow-up" aria-hidden="true"></i></div>

	<!-- page wrapper start -->
	<!-- ================ -->
	<div class="page-wrapper">

		<!-- header-container start -->
		<div class="header-container">

			<!-- header-top start -->
			<!-- classes:  -->
			<!-- "dark": dark version of header top e.g. class="header-top dark" -->
			<!-- "colored": colored version of header top e.g. class="header-top colored" -->
			<!-- ================ -->
			<div class="header-top dark ">
				<div class="container">
					<div class="row">
						<div class="col-xs-3 col-sm-6 col-md-9">
							<!-- header-top-first start -->
							<!-- ================ -->
							<div class="header-top-first clearfix">
								<ul class="social-links circle small clearfix hidden-xs">
									<li class="twitter"><a target="_blank" href="http://www.twitter.com"><i class="fa fa-twitter"></i></a></li>
									<li class="youtube"><a target="_blank" href="https://www.youtube.com/channel/UCWtSIxnlY7VyzsqNW8K_97A"><i class="fa fa-youtube-play"></i></a></li>
								</ul>
								<div class="social-links hidden-lg hidden-md hidden-sm circle small">
									<div class="btn-group dropdown">
										<button type="button" class="btn dropdown-toggle" data-toggle="dropdown"><i class="fa fa-share-alt"></i></button>
										<ul class="dropdown-menu dropdown-animation">
											<li class="twitter"><a target="_blank" href="http://www.twitter.com"><i class="fa fa-twitter"></i></a></li>
											<li class="youtube"><a target="_blank" href="https://www.youtube.com/channel/UCWtSIxnlY7VyzsqNW8K_97A"><i class="fa fa-youtube-play"></i></a></li>
										</ul>
									</div>
								</div>
								<ul class="list-inline hidden-sm hidden-xs hidden-md">
									<li><i class="fa fa-map-marker pr-5 pl-10"></i> 64 Haverhill Road, Rt. 111 Windham, NH 03087-1516</li>
								</ul>
								<ul class="list-inline hidden-sm hidden-xs ">
									<li><i class="fa fa-phone pr-5 pl-10"></i> <a href="tel:+16034341348">(603) 434 - 1348</a> </li>
									<li><i class="fa fa-calendar pr-5 pl-10"></i> M - F (9:00am - 5:00pm)</li>
								</ul>
							</div>
							<!-- header-top-first end -->
						</div>
						<div class="col-xs-9 col-sm-6 col-md-3">
							<!-- header-top-second start -->
							<!-- ================ -->
							<div id="header-top-third"  class="clearfix">
								<div class="header-top-dropdown text-right">
									<div class="btn-group">
										<%= link_to "signup", :class => 'btn btn-default btn-sm' do %><i class="fa fa-user pr-10"></i> Sign Up
										<% end %>
									</div>

									<!-- Sign in button (creates popup) -->
									<div class="btn-group" data-toggle="modal" data-target="#signin">
										<a href="#" class=" btn btn-default btn-sm blueme"><i class="fa fa-lock pr-10"></i> Sign In <i class="fa fa-caret pr-10"></i></a>
									</div>
									<!-- popup -->
									<div class="modal fade" id="signin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
										<div class="modal-dialog" role="document">
											<div class="modal-content">
												<div class="modal-header">
													<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"><i class="fa fa-times fa-inverse"></i></span></button>
													<h4 class="modal-title" id="myModalLabel">Subscription Sign In</h4>
												</div>
												<div class="modal-body">
													<p class="text-center"><i class="fa fa-exclamation-triangle"></i> Access to the Hydratec Support Pages is available <br>only to customers on the Hydratec Maintenance Plan.</p>
													<form method="post" action="https://hydratec.sharefile.com" class="login-form margin-clear">
														<div class="form-group has-feedback">
															<label class="control-label">Username</label>
															<input type="text" name="username" class="form-control" id="inputUserName" placeholder="User Name" required>
															<i class="fa fa-user form-control-feedback"></i>
														</div>
														<div class="form-group has-feedback">
															<label class="control-label">Password</label>
															<input type="password" name="password" class="form-control" id="inputPassword" placeholder="Password" required>
															<i class="fa fa-lock form-control-feedback"></i>
														</div>
														<button type="submit" class="btn btn-gray btn-sm">Log In</button>
														<span class="pl-5 pr-5">or</span>
														<%= link_to "signup", :class => 'btn btn-default btn-sm' do %>Sign Up
														<% end %>
														<p><br><a href="https://hydratec.sharefile.com/?cmd=p" rel="nofollow">Forgot your password <i class="fa fa-question-circle"></i></a> </p>
														<p><a href="https://accounts.autodesk.com" title="Autodesk Login" class="with-tab">Autodesk Account Login <i class="fa fa-arrow-circle-right"></i></a></p>
														<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
													</form>
												</div>
											<!-- 	<div class="modal-footer">
													<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
												</div> -->
											</div>
										</div>
									</div>
								</div>
							</div>
							<!-- header-top-second end -->
						</div>
					</div>
				</div>
			</div>
			<!-- header-top end -->
			
			<!-- header start -->
			<!-- classes:  -->
			<!-- "fixed": enables fixed navigation mode (sticky menu) e.g. class="header fixed clearfix" -->
			<!-- "dark": dark version of header e.g. class="header dark clearfix" -->
			<!-- "full-width": mandatory class for the full-width menu layout -->
			<!-- "centered": mandatory class for the centered logo layout -->
			<!-- ================ -->
			<header class="header  fixed dark  clearfix">
				
				<div class="container">
					<div class="row">
						<div class="col-md-4 col-lg-3">
							<!-- header-left start -->
							<!-- ================ -->
							<div class="header-left clearfix">
								<!-- logo -->
								<div id="logo" class="logo">
									<%= link_to image_tag("hydratec_logo.png", id: "fader", height: "60", alt: "Hydratec Inc."), home_path %>
								</div>
								<!-- name-and-slogan -->
								<!-- <div class="site-slogan"> -->
								<!-- Excellence in sprinkler software since 1972 -->
								<!-- </div> -->
								
							</div>
							<!-- header-left end -->
						</div>
						<div class="logo-nav-div hidden-md hidden-lg hidden-xl">
							
						</div>
						<div class="col-md-8 col-lg-9">
							
							<!-- header-right start -->
							<!-- ================ -->
							<div class="header-right clearfix">
								
								<!-- main-navigation start -->
								<!-- classes: -->
								<!-- "onclick": Makes the dropdowns open on click, this the default bootstrap behavior e.g. class="main-navigation onclick" -->
								<!-- "animated": Enables animations on dropdowns opening e.g. class="main-navigation animated" -->
								<!-- "with-dropdown-buttons": Mandatory class that adds extra space, to the main navigation, for the search and cart dropdowns -->
								<!-- ================ -->
								<div class="main-navigation  animated with-dropdown-buttons">
									<!-- navbar start -->
									<!-- ================ -->
									<nav class="navbar navbar-default" role="navigation">
										<div class="container-fluid">
											<!-- Toggle get grouped for better mobile display -->
											<div class="navbar-header text-center">
												<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-1">
													<span class="sr-only">Toggle navigation</span>
													<span class="icon-bar"></span>
													<span class="icon-bar"></span>
													<span class="icon-bar"></span>
												</button>
											</div>
											<!-- Collect the nav links, forms, and other content for toggling -->
											<div class="collapse navbar-collapse" id="navbar-collapse-1">
												<!-- main-menu -->
												<ul class="nav navbar-nav ">
													<li class="link">
														<%= link_to("Home", home_path, class: "link") %>
													</li>
													<li class="dropdown">
														<a class="dropdown-toggle" data-toggle="dropdown" href="#">Software</a>
														<ul class="dropdown-menu">
															<li class="dropdown active">
																<%= link_to("Hydratec", hydratec_software_path, class: "dropdown-toggle", data:{data_toggle: "dropdown"}) %>
																<ul class="dropdown-menu">
																	<li ><%= link_to("HydraCAD", hydratec_software_path+"#HCAD") %></li>
																	<li ><a href="#HCALC">HydraCALC</a></li>
																	<li ><a href="#LIST">HydraCALC-Revit</a></li>
																	<li ><a href="#">HydraCALC-Sizer</a></li>
																	<li ><a href="#">HydraLIST Select</a></li>
																	<li ><a href="#">Head Selector</a></li>
																	<li ><a href="#">Valve Selector</a></li>
																	<li ><a href="#">HydraBID</a></li>
																	<li ><a href="#">HydraCAD-R</a></li>
																</ul>
															</li>
															<li class="dropdown ">
																<a  class="dropdown-toggle" data-toggle="dropdown" href="#">Autodesk</a>
																<ul class="dropdown-menu">
																	<li ><a href="#">AutoCAD</a></li>
																	<li ><a href="#">NavisWorks</a></li>
																	<li ><a href="#">Revit</a></li>
																	<li ><a href="#">BuildingDesignSuite</a></li>
																</ul>
															</li>
														</ul>
													</li>
													<li class="dropdown ">
														<%= link_to("Services", services_path, class: "dropdown-toggle", data:{data_toggle: "dropdown"}) %>
														<ul class="dropdown-menu">
															<li class="">
																<%= link_to("Estimating", services_path+"#estimating", class: "dropdown", data:{data_toggle: "dropdown"}) %>
															</li>
															<li class="">
																<%= link_to("Calculations", services_path+"#calculations", class: "dropdown", data:{data_toggle: "dropdown"}) %>
															</li>
															<li class="">
																<%= link_to("Design Layout", services_path+"#designlayout", class: "dropdown", data:{data_toggle: "dropdown"}) %>
															</li>
														</ul>
													</li>
													<li class="dropdown ">
														<%= link_to("Links", links_path, class: "dropdown-toggle", data:{data_toggle: "dropdown"}) %>
														<ul class="dropdown-menu">
															<li class="">
																<%= link_to("Useful Links", links_path+"#estimating", class: "dropdown", data:{data_toggle: "dropdown"}) %>
															</li>
															<li class="">
																<%= link_to("Our Memberships", links_path+"#calculations", class: "dropdown", data:{data_toggle: "dropdown"}) %>
															</li>
														</ul>
													</li>
													<li class="link">
														<%= link_to("Contact Us", contact_path, class: "link") %>
													</li>
													<li class="link">
														<%= link_to("Blog", "http://www.hydratec.blogs.com/the_h_factor", class: "link") %>
														<!-- <a href="www.hydratec.blogs.com/the_h_factor">Blog</a> -->
													</li>
												</ul>
												<!-- main-menu end -->
												
											</div>
										</div>
									</nav>
									<!-- navbar end -->
								</div>
								<!-- main-navigation end -->
							</div>
							<!-- header-right end -->
							
						</div>
					</div>
				</div>
				
			</header>
			<!-- header end -->
		</div>
		<!-- header-container end -->
		
		<%= yield %>

		<!-- footer top start -->
		<!-- ================ -->
		<div class="dark-bg  default-hovered footer-top animated-text">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="call-to-action text-center">
							<div class="row">
								<div class="col-sm-8">
									<h2>Powerful Fire Protection Software</h2>
									<h2>Waste no more time</h2>
								</div>
								<div class="col-sm-4">
									<p class="mt-10"><a href="#" class="btn btn-animated btn-lg btn-gray-transparent ">Contact Us
										<i class="fa fa-comment pl-20"></i>
									</a>
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- footer top end -->
	<%= render 'layouts/footer' %>
	
<!-- page-wrapper end -->
<!-- JavaScript files placed at the end of the document so the pages load faster -->
<!-- ================================================== -->
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js></script>
</body>
</html>