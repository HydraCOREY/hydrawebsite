<section class="main-container">
	<div class="container">
		<div class="row">

			<!-- main start -->
			<!-- ================ -->
			<div class="style-2 mb-20 shadow bordered light-gray-bg news col-md-5">
				<!-- page-title start -->
				<!-- ================ -->
				<h1 class="page-title"><i class="fa fa-newspaper-o"></i> Latest News</h1>
				<div class="separator-2"></div>
				<!-- page-title end -->
				<p class="lead">The latest news will be posted here:</p>
				<div class="row grid-space-12">
					<% @news.each do |news| %>
						<p class="small margin-clear f-left post-date"><em> <%= news.topic %> - <%= news.created_at.strftime("%A, %b %d") %></em></p>
						<div class="clearfix"></div>
					<div class="col-sm-12">
						<div class="image-box style-2 mb-20 shadow bordered text-center">
							<div class="body">
								<h3><%= news.header %></h3>
								<div class="separator"></div>
								<p><%= markdown news.content %></p>
								<a href="<%= news %>" class="btn btn-default btn-sm btn-hvr hvr-shutter-out-horizontal margin-clear">Read More<i class="fa fa-arrow-right pl-10"></i></a>
							</div>
						</div>
					</div>
					<% end %>
				</div>
			</div>
			<!-- Latest News end -->
			
			<div class="style-2 mb-20shadow bordered light-gray-bg news col-md-5">
				<!-- Useful Links start -->
				<!-- ================ -->
				<h1 class="page-title"><i class="fa fa-link"></i> Useful Links</h1>
				<div class="separator-2"></div>
				<!-- page-title end -->
				<p class="lead">The latest links:</p>
				<div class="row grid-space-12">
				<% @links.each do |links| %>
					<p class="small margin-clear f-left post-date"><em> <%= links.topic %> - <%= links.created_at.strftime("%A, %b %d") %></em></p>
					<div class="col-sm-12">
						<div class="image-box style-2 mb-20 shadow bordered text-center">
							<div class="body">
								<h3><%= links.header %></h3>
								<div class="separator"></div>
								<p><%= links.content %></p>
								<a href="" class="btn btn-default btn-sm btn-hvr hvr-shutter-out-horizontal margin-clear">Read More<i class="fa fa-arrow-right pl-10"></i></a>
							</div>
						</div>
					</div>
					<% end %>
				</div>
			</div>
			<!-- main end -->
		</div>
	</div>
</section>
