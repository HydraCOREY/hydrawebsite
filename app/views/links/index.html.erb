
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>

      <h1>Listing Links</h1>

      <table class="table table-striped table-colored">
        <thead>
          <tr>
            <th>Topic</th>
            <th>Header</th>
            <th>Content</th>
            <th>Link</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @links.each do |link| %>
          <tr class="list-group">
            <td><%= link.topic %></td>
            <td><%= link.header %></td>
            <td><%= link.content %></td>
            <td><%= link.link %></td>
            <td><%= link_to 'Show', link, class: 'btn btn-success btn-border btn-sm' %></td>
            <td><%= link_to 'Edit', edit_link_path(link), class: 'btn btn-default btn-border btn-sm' %></td>
            <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-border btn-sm' %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Link', new_link_path, class: 'btn btn-success btn-border btn-sm' %>
    </div>
  </div>
</div>